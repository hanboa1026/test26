<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ksmart.project.test26.mapper.IdolMapper">

	<!-- select list -->
	<select id="selectIdolList"
			resultType="ksmart.project.test26.service.Idol">
		SELECT 
			idol_id as idolId
			,idol_name as idolName
		FROM idol
	</select>
	
	<!-- select -->
	<select id="getIdol"
			parameterType="int"
			resultType="ksmart.project.test26.service.Idol">
		SELECT
			idol_id as idolId
			,idol_name as idolName
		FROM idol
		WHERE idol_id = #{idolId}
	</select>
	
	<!-- insert -->
	<insert id="insertIdol"
			parameterType="ksmart.project.test26.service.Idol">
		INSERT INTO idol(
			idol_name)
		VALUES (
			#{idolName}
		)
	</insert>

	<!-- update -->
	<update id="updateIdol"
			parameterType="ksmart.project.test26.service.Idol">
		UPDATE idol
			SET idol_name = #{idolName}
		WHERE idol_Id = #{idolId}
	</update>
	
	<!-- delete -->
	<delete id="deleteIdol"
			parameterType="ksmart.project.test26.service.Idol">
		DELETE
		FROM idol
		WHERE idol_id = #{idolId}
	</delete>

</mapper>


