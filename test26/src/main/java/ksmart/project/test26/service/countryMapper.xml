<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ksmart.project.test26.service.countryMapper">

	<!-- 나라 목록 조회 -->
	<select id="selectCountryList" resultType="ksmart.project.test26.service.Country">
		SELECT
		country_id as
		countryId
		,country_name as countryName
		FROM country
	</select>

	<!-- 나라 추가 -->
	<insert id="insertCountry" parameterType="ksmart.project.test26.service.Country">
		INSERT INTO country
		(country_name)
		VALUES(
		#{countryName}
		)
	</insert>
	
	<!-- 나라 삭제 -->
	<delete id="deleteCountry">
		DELETE FROM country
		WHERE country_id = #{countryId}		
	</delete>
	<!-- 나라 정보 수정 -->
</mapper>